<%= form_for @user do |form| %>
  <div class="field">
    <%= form.label :ユーザーID %>
    <%= form.text_field :login_id %>
  </div>
  
  <div class="field">
    <%= form.label :ユーザー名 %>
    <%= form.text_area :name %>
  </div>

  <div class="field">
    <%= form.label :アイコン画像 %>
    <%= form.file_field :icon, class: "image" %>
    <%= f.check_box :remove_img %>画像を削除する %>
  </div>

  <div class="field">
    <%= form.label :プロフィール  %>
    <%= form.text_area :profile %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>