<div class="card" style="width: 50rem; padding: 20px; margin:0 auto;">
<%= form_for @user do |form| %>
  <div class="field">
    <%= form.label :名前 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :ユーザーネーム %>
    <%= form.text_field :login_id %>
  </div>
  
  <div class="field">
    <%= form.label :アイコン画像 %>
    <%= form.file_field :icon, class: "image" %>
    <p><%= form.check_box :remove_icon %>画像を削除する</p>
  </div>

  <div class="field">
    <%= form.label :プロフィール  %>
    <%= form.text_area :profile %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>