<h1>Users#show</h1>

<p>
  <strong>ユーザーID:</strong>
  <%= @user.login_id %>
</p>

<p>
  <strong>ユーザー名:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Icon:</strong>
  <%= @user.icon %>
  <%= image_tag @user.icon.url if @post.img?%>
</p>

<p>
  <strong>プロフィール:</strong>
  <%= @user.profile %>
</p>

 <% if @user.id == current_user.id %>
    <td>
    <%= link_to "編集", edit_user_path(@user)%>
    </td>
<% end %>

