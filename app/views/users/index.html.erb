<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<table>
  <thead>
    <tr>
      <th>ログインID</th>
      <th>ユーザー名</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login_id %></td>
        <td><%= link_to  user.name,user_path(user) %></td>
        <td>
          <% if user.icon? %>
          <%= image_tag user.icon.url, width: '20%' if user.icon? %>
          <% else %>
          <image src="/assets/default.png" width= "20%">
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
