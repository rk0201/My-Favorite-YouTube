<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>動画タイトル</th>
      <th>チャンネル</th>
      <th>ひとこと</th>
      <th>Thumbnail</th>
      <th>Status</th>
      <th>Start time</th>
      <th>投稿ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.channnel_name %></td>
        <td><%= article.content %></td>
        <td><%= article.thumbnail %></td>
        <td><%= article.status %></td>
        <td><%= article.start_time %></td>
        <td><%= article.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_article_path %>
