<% @articles.each do |article| %>
<div class="card" style="width: 50rem; margin:0 auto;">
  <div class="card-body">
    
    <%# ユーザー名　%>
    <%= link_to user_path(article.user)do %>
      　<%= article.user.name %>
    <% end %>
  </div>
    
  <%# 動画　%>
  <iframe class="card-img-top" style="width: 50rem; height: 28rem; margin:0 auto; " src="https://www.youtube.com/embed/<%= article.thumbnail%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  
  <div class="card-body">
    <h3 class="card-title">
      
      <%# タイトル　%>
      <i class="fas fa-caret-square-right"></i>
      <%= article.title %>
      
      <%# いいね　%>
      <div class="favorites_buttons_<%= article.id %>">
        <%= render partial: 'favorites/favorite', locals: {article: article} %>
  　　</div>
    </h3>
    
    <%# チャンネル名　%>
    <p class="card-channnel">
    <i class="fas fa-tv"></i>
    <%= article.channnel_name %></p>
  </div>

  
  <ul class="list-group list-group-flush">
    
    <%# ひとこと・タグ　%>
    <li class="list-group-item">
      
      <%= article.content %>
      <p>
        <% article.tag_list.each do |tag| %>
          <span class="badge badge-primary.mr-1.p-2"><%= tag %></span>
        <% end %>
      </p>
    </li>
    
    <%# コメント　%>
    
    
    <%# 投稿日時　%>
    <li class="list-group-item">
     <p>
      <i class="fas fa-clock"></i>
      <%= article.updated_at.strftime("%Y-%m-%d %H:%M") + 'に公開' %>
    
      <%# ログインユーザーの場合　%>
      <% if article.user.id == current_user.id %>
      　<div style="text-align : right">
          <%= link_to '編集', edit_article_path(article) %>
          <%= link_to '削除', article_path(article), method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %>
          <%= article.status_i18n %>
        </div>
      <% end %>
     </p>
    </li>
  </ul>
  
  
  
</div>
<% end %>


<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>動画タイトル</th>
      <th>Thumbnail</th>
      <th>Start time</th>
      <th>投稿ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><iframe width="320" height="180" src="https://www.youtube.com/embed/<%=article.thumbnail%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
        <td><%= article.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to article.user.name,user_path(article.user) %></td>
        <td>
          <div id="favorites_buttons_<%= article.id %>">
             <%= render partial: 'favorites/favorite', locals: { article: article} %>
          </div>
        </td>
        <td>
          <% article.tag_list.each do |tag| %>
          <span class="badge badge-primary.mr-1.p-2"><%= tag %></span>
          <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

