<% if user_signed_in? %>
    <% if current_user.already_favorited?(article) %>
        <%=link_to article_favorites_path(article.id), method: :delete, remote: true, class: "fas fa-heart", style: "color: red;" do%><% end %>
        <%= article.favorites.count %>
    <% else %>
        <%=link_to article_favorites_path(article.id), method: :post, remote: true, class: "far fa-heart" , style: "color: red;" do%><% end %>
        <%= article.favorites.count %>
    <% end %>

<% end %>